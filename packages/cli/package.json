{
	"name": "notra-editor",
	"type": "module",
	"version": "1.0.0-beta.0",
	"description": "CLI tool to scaffold notra-editor into your project",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/levix0501/notra-editor.git",
		"directory": "packages/cli"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"keywords": [
		"tiptap",
		"editor",
		"cli",
		"scaffold"
	],
	"bin": {
		"notra-editor": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"release": "changeset version",
		"pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
		"pub:release": "pnpm build && pnpm publish --access public"
	},
	"dependencies": {
		"commander": "^14.0.0",
		"kleur": "^4.1.5",
		"ora": "^8.2.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/prompts": "^2.4.9",
		"fast-check": "^3.19.0",
		"tsup": "^8.5.0",
		"typescript": "^5",
		"vitest": "^4.0.18"
	}
}
